<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LocationsActivity" android:orientation="vertical">
    <ListView
            android:layout_width="match_parent"
            android:layout_height="670dp" android:id="@+id/LocationsListView"/>
    <Button
            android:text="New Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/newLocationButton" android:onClick="onClickNewLocation"/>
</LinearLayout>