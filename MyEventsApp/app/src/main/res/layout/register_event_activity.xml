<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterEventActivity" android:orientation="vertical">
    <TextView
            android:text="Event Name"
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/textViewName2" android:textSize="36sp"
            android:textAlignment="center" android:fontFamily="casual" android:textStyle="bold|italic"
            android:textAllCaps="false" android:background="#61AFED"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textNameInput"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/textViewDate" android:textSize="36sp"
            android:fontFamily="casual" android:textAlignment="center" android:textStyle="bold|italic"
            android:background="#61AFED" android:text="Date"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:ems="10"
            android:id="@+id/textDateInput"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp" android:id="@+id/textView3" android:text="Location" android:textSize="36sp"
            android:textStyle="bold|italic" android:fontFamily="casual" android:textAlignment="center"
            android:background="#61AFED"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/textLocationInput"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <Button
                android:text="Cancel"
                android:layout_width="wrap_content"
                android:layout_height="70dp" android:id="@+id/button" android:layout_weight="1"
                android:onClick="onClickCancel"/>
        <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="70dp" android:id="@+id/button2" android:layout_weight="1"
                android:onClick="onClickSave" android:backgroundTint="#4CAF50"/>
    </LinearLayout>
</LinearLayout>